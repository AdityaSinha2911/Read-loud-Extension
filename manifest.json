{
  "manifest_version": 3,
  "name": "Read Aloud Extension",
  "version": "1.0",
  "description": "Reads selected text on a webpage aloud",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": ["activeTab", "scripting"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
